graph TB
    subgraph "Zero-Trust Principles"
        ZT1[Never Trust<br/>Always Verify]
        ZT2[Least Privilege<br/>Access]
        ZT3[Micro-Segmentation<br/>of Operations]
        ZT4[Continuous<br/>Monitoring]
    end
    
    subgraph "Authentication Layer"
        AI[AI Agent]
        SM[Session Manager]
        AUTH[Authentication<br/>Bootstrap Secret]
        ROLE[Role Verification<br/>ANTIGRAVITY/WINDSURF]
    end
    
    subgraph "Authorization Layer"
        PLAN[Plan Validation<br/>SHA256 Hash]
        SCOPE[Scope Enforcement<br/>Bounded Operations]
        META[Metadata Validation<br/>Required Fields]
    end
    
    subgraph "Execution Layer"
        TOOL[Tool Access<br/>Role-Specific]
        FILE[File Operations<br/>Authorized Paths]
        AUDIT[Audit Logging<br/>Immutable Records]
    end
    
    subgraph "Verification Layer"
        HASH[Content Hashing<br/>SHA256 Verification]
        CHAIN[Chain Verification<br/>Hash Links]
        INTEGR[Integrity Checks<br/>Stub Detection]
    end
    
    subgraph "Monitoring Layer"
        LOG[Audit Log<br/>JSONL Format]
        ALERT[Anomaly Detection<br/>Security Events]
        COMPL[Compliance Reporting<br/>Regulatory Requirements]
    end
    
    %% Trust Boundaries
    subgraph "Trust Boundary 1: Session"
        AI
        SM
        AUTH
        ROLE
    end
    
    subgraph "Trust Boundary 2: Authorization"
        PLAN
        SCOPE
        META
    end
    
    subgraph "Trust Boundary 3: Execution"
        TOOL
        FILE
        AUDIT
    end
    
    %% Connections
    ZT1 --> AUTH
    ZT2 --> ROLE
    ZT3 --> SCOPE
    ZT4 --> ALERT
    
    AI --> SM
    SM --> AUTH
    AUTH --> ROLE
    ROLE --> PLAN
    PLAN --> SCOPE
    SCOPE --> META
    META --> TOOL
    TOOL --> FILE
    FILE --> AUDIT
    AUDIT --> HASH
    HASH --> CHAIN
    CHAIN --> INTEGR
    INTEGR --> LOG
    LOG --> ALERT
    ALERT --> COMPL
    
    %% Feedback Loops
    ALERT -.-> AUTH
    COMPL -.-> ROLE
    LOG -.-> PLAN
    
